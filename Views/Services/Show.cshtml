@model ServiceItem
@{
    ViewBag.Title = Model.MetaTitle;
    ViewBag.Description = Model.MetaDescription;
    ViewBag.Keywords = Model.MetaKeywords;
}

<div>
    <h2>
        @Model.Title
    </h2>
    <h2>
        @Model.Subtitle
    </h2>
    <div>
        <img class="img-block" src="~/images/@Model.TitleImagePath" style="width: 350px; height: 350px" />
    </div>
    <h2>
        Категорія: @Model.CategoryItem, магазин: @Model.ShopItem, Ціна: @Model.Price грн
    </h2>
</div>
<div>
    @Html.Raw(Model.Text)
</div>